 <!-- モーダルの適切な幅とマージンを設定 -->
              <div class="modal-dialog">
                <!-- モーダルコンテンツ:モーダルに表示させる内容-->
                <div class="modal-content">
                    <!-- &timesは「×ボタン」の表示-->
                  <div class="modal-body">
                     <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <%= form_with(model:@overtimenotification, method: :post, local: true) do |f| %>
                      <table class="table table-bordered">
                        <h4>【残業申請】</h4>
                        <thead>
                          <tr>
                            <th>日付</th>
                            <th>曜日</th>
                            <th>終了予定時刻</th>
                            <th>翌日</th>
                            <th>業務処理内容</th>
                            <th>指示者確認㊞</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%= l(@attendance.worked_on, format: :short) %></td>
                            <td class="<%= wday_color(@attendance.worked_on.wday) %>"><%= $days_of_the_week[@attendance.worked_on.wday] %></td>
                            <td><%= f.time_select :designated_work_end_time %></td>
                            <td><%= f.check_box :next_day %></td>
                            <td><%= f.text_field :note %></td>
                            <td><%= f.select :visited_id, @lists, {include_blank: ""} %></td>
                          </tr>
                        </tbody>
                      </table>
                      <%= f.submit "変更を申請する", class: "btn btn-primary submit-btn" %>
                    <% end %>
                  </div>
                </div>
              </div>